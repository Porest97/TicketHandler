@model IEnumerable<TicketHandler.Models.DataModels.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TicketNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Incident)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WL1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WL2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WL3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Incident.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WL1.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WL2.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WL3.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
